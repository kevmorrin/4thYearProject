<!DOCTYPE html>
<html lang="en"">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0]; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = "https://platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } }(document, "script", "twitter-wjs");</script>

        @Styles.Render("~/Content/css/customstyle.css")
    </head>

    <body>
        <header>
            <nav class="navbar-wrapper navbar-default navbar-fixed-top" role="navigation">
                <div class="container">
                    
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                            <span class="sr-only">Toggle navigation</span>
                        </button>
                        <a class="navbar-brand"><img src="/Images/lookItUpLogo.png" height="50" width="150"></a>
                    </div>

                    <!-- Navagation Bar -->
                    <div class="collapse navbar-collapse">

                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Search", "Index", "Business")</li>
                            <li>@Html.ActionLink("Create", "Create", "Business")</li>
                            <li>@Html.ActionLink("About Us", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                        </ul>
                        <div class="float-right">
                            <a href="https://twitter.com/share" data-text="Looking for business details check out" data-url="http://www.lookitup.cloudapp.net" class="twitter-share-button" data-lang="en">Tweet</a>
                            <section id="login">
                                @Html.Partial("_LoginPartial")
                            </section>
                        </div>
                    </div><!-- /.navbar-collapse -->
                </div>  <!-- Container Close -->
            </nav>
        </header>

        <div id="body" style="width:100%; height:100%;">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - LookItUp, IT Tallaght Dublin</p>
                </div>
                <div class="float-right">
                    @Html.ActionLink("User Manual", "UserManual", "Home") | 
                    @Html.ActionLink("Manage Account", "Manage", "Account")
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>