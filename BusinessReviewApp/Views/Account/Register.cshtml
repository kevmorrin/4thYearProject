@using Recaptcha.Web.Mvc;
@model BusinessReviewApp.Models.RegisterModel

<h2>Create a new account.</h2>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)<br/>
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)<br/>
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)<br/>
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
        </ol>

        @Html.Recaptcha(theme:Recaptcha.Web.RecaptchaTheme.Blackglass)<br/>

        <input type="submit" value="Register" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
